@model EmployeeToCreateDto
@{
	ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">Create Employee</h1>

	<form method="post" asp-controller="Employee" asp-action="Create" class="col-8">
		<div asp-validation-summary="ModelOnly"></div>
		<div class="form-group mb-3">
			<label class="form-label" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span> @*Name is required*@
		</div>
		<div class="form-group mb-3">
			@* <label class="form-label" for="Code"></label> *@
			@* <input id="Code" name="Code" type="text" /> *@
			<label class="form-label" asp-for="Email"></label>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label class="form-label" asp-for="Address"></label>
			<textarea class="form-control" asp-for="Address"></textarea>
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label class="form-label" asp-for="Age"></label>
			<textarea class="form-control" asp-for="Age"></textarea>
			<span asp-validation-for="Age" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label class="form-label" asp-for="PhoneNumber"></label>
			<input asp-for="PhoneNumber" class="form-control" />
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>

		<div class="form-group mb-3">
			<label class="form-label" asp-for="HiringDate"></label>
			<input type="date" asp-for="HiringDate" class="form-control" />
			<span asp-validation-for="HiringDate" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label class="form-label" asp-for="Salary"></label>
			<input  asp-for="Salary" class="form-control" />
			<span asp-validation-for="Salary" class="text-danger"></span>
		</div>
		<div class="form-group mb-3">
			<label class="form-label" asp-for="Gender">Gender</label>
			<div>
				@foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
				{
					<div class="form-check form-check-inline">
						<input type="radio" asp-for="Gender" class="form-check-input" value="@genderOption" />
						<label class="form-check-label">@genderOption</label>
					</div>
				}
			</div>
		</div>
		<span asp-validation-for="Gender" class="text-danger"></span>


		<div class="form-group mb-3">
			<select asp-for="EmployeeType" asp-items="@Html.GetEnumSelectList<EmployeeType>()">
				<option value="">Select Employee Type</option>
			</select>
			<span asp-validation-for="EmployeeType" class="text-danger"></span>

	
		</div>
		<div class="form-group mb-3">
			<input asp-for="IsActive" class="form-check-input" />
			<label class="form-label" asp-for="IsActive"></label>
		</div>
		<div class="mt-4 m-auto">
			<input class="btn btn-primary" type="submit" value="Create" />
			<a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
		</div>

		@*         <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div> *@

	</form>
</div>

@section VaildationScripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

